sub hashPrint {
	$hashRef = shift;
	%hash = %$hashRef;
	$output='';
	while(my($k, $v) = each %hash) { 
		$output .= "$k: $v<br/>";
	}
	return $output;
}

sub compareArrays {
	my $a1r = shift;
	my $a2r = shift;
	my @a1 = @$a1r;
	my @a2 = @$a2r;
	my %a1 = map { $_ => 1 } @a1;
	my %a2 = map { $_ => 1 } @a2;

	my @missing_from_a1 = grep !$a1{$_}, @a2;
	my @missing_from_a2 = grep !$a2{$_}, @a1;

	if (scalar @missing_from_a1 > 0) {
		return 0;
	}
	if (scalar @missing_from_a2 > 0) {
		return 0;
	}
	return 1;
}



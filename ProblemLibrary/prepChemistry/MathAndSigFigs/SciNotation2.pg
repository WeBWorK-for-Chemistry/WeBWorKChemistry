foreach my $val (@check) {
    if (abs($base3 - $val) < 0.0001) {  # Use tolerance for float comparison
        $base3 = list_random(2.75, 4.909, 3.22, 1.001, 9.007, 7.6, 2.00, 2.040);
        last;

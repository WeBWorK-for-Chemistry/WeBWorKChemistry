}
$exponent3 = random(-4, 6, 1);
$prob3 = Compute("$base3 x 10^$exponent3");    
$answer3 = $base3*10**($exponent3);

$base4 = random(1.0, 9.9, 0.01);

foreach my $val (@check) {
    if (abs($base4 - $val) < 0.0001) {  # Use tolerance for float comparison

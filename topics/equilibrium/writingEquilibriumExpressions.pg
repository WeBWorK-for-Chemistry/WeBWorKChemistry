	);

$index = random(0,9,1);

$reaction = $reactionComponents[$index];

%h = %{$context->parens};

sub recursive {
	my $hash = shift;
	my %h = %$hash;
	my $level = shift;
	my $result= '';

	for (keys %h){
		for($i=0;$i<$level;$i++){
			$result .= '&ensp;';
		}
		$type = ref($h{$_});
		# warn $type != undefined ? $type : 'scalar';
		if ($type =~ m/HASH/) { #@eq "HASH"){
			$result .= $_ . ":<BR/>";
			$result .= recursive($h{$_}, $level + 1);
		} elsif($type =~ m/ARRAY/){
			$result .= $_ . ": ";
			for ($i=0;$i < scalar @$h{$_}; $i++){
				$result .= $h{$_}->[$i] . ', ';
			}
			$result .= '<BR/>';
		} else {
			$result .= $_ . ": " . $h{$_} . '<BR/>';
		}
		#"$_ $h{$_}\n";# for (keys %h);
	}
	return $result;
}


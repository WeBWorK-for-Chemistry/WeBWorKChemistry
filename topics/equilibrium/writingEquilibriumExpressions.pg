$numerator = '(' . $reaction->[5] . ')^{' . $reaction->[4] . '}*('. $reaction->[7] . ')^{' . $reaction->[6] . '}';
$denominator = '(' . $reaction->[1] . ')^{' . $reaction->[0] . '}*('. $reaction->[3] . ')^{' . $reaction->[2] . '}';
$answer = Formula($numerator . '/(' . $denominator . ')');
